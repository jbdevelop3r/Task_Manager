<p class="greet-user"><span> Hello, <%= current_user.email %>!</span></p>
<div class="category-header">
  <p>Categories</p>
  <%= link_to new_category_path, class: "add-category" do %>
    Add a category 
  <% end %>
</div>

<%= link_to "/today", class:"due-today-show" do %>
    View today's tasks (<%= @due_today.length %>)
<% end %>
 
<%= link_to "/overdue", class:"overdue-show" do %>
  View overdue tasks (<%= @overdue.length %>)
<% end %>
 
<%= link_to "/futuretask", class:"futuretask-show" do %>
  View future tasks (<%= @futuretask.length %>)
<% end %>

<%if @categories.length < 1 %>
  <p class="no-category-yet"> NO CATEGORY YET </p>
<% else %>
  <div class="category-all">
  <% @categories.each do |category| %>
    <div  class="category-cont"> 
      <%= link_to category.title, category, class: "category-name", id: "index-show-category" %>
      <p class="each-category-task-length">Tasks: (<%= category.tasks.length %>) </p>
    </div>
  <% end %>
</div> 
<% end %>





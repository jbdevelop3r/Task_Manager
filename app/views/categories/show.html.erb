
<div class="category-show">
<h1><%= @category.title %></h1>

<div class="category-links">
  <p><%= link_to "Edit", edit_category_path(@category), class: "category-links" %></p>
  <p><%= link_to "Home", categories_path(@category), class: "category-links" %></p>
  <p><%= link_to "Destroy", category_path(@category), class: "category-links", method: :delete, data: {confirm: "Are you sure?"} %></p>
</ul>
</div>
</div>

<h1> Current Tasks </h1>
<%= render @category.tasks %>


<div class="category-show">
  <h1><%= @category.title %></h1>
  <div class="category-links">
    <p>
      <%= link_to categories_path(@category), class: "category-links" do%>
        <i class="fa-solid fa-house-user"></i>
      <% end %>
    </p>
    <p> 
      <%= link_to edit_category_path(@category), class: "category-links-edit" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
    </p>
    <p>
      <%= link_to category_path(@category), class: "category-links-delete", method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </p>
    <p>
      <%= link_to new_category_task_path(@category, @task), class: "category-links-add-task" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </p>
</div>   
</div>

<% if @category.tasks.length < 1 %>
  <p class="no-tasks"> No task under this category. </p>
<% else %>
  <%= render @category.tasks %>
<% end %>





